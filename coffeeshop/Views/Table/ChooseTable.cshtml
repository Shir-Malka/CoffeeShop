@model IEnumerable<coffeeshop.Models.ShopTable>

<h1>Choose Table</h1>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.TableSize)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/img/@item.Image" width="45" height="45">
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TableSize)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InsideOutside)
    </td>
    <td>
        <img src="~/img/@item.AvilableNotAvilable" width="100" height="57">
    </td>
    <td>
        @Html.ActionLink("Select Table", "Order", "Table")
    </td>
</tr>
}

</table>
