@model IEnumerable<coffeeshop.Models.ShopTable>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TableSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InsideOutside)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvilableNotAvilable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TableSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InsideOutside)
        </td>
        <td>
            <img src="~/img/@item.Image" width="45" height="45">
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TableID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TableID })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to Admin Home Page", "AdminHomePage", "Admin")
</div>
